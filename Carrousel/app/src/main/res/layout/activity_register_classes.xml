<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.lia.carrousel.Activities.Register.RegisterClassesActivity"
    android:background="@color/grape">

    <LinearLayout
        style="@style/ButtonBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/linearLayout"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <Button
            android:id="@+id/prev_button"
            style="@style/ButtonBarButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/eggplant"
            android:text="@string/pr_c_dente"
            android:onClick="previous"
            android:textAppearance="?android:attr/textAppearanceButton"
            android:textColor="@color/sand"/>

        <Button
            android:id="@+id/next_button"
            style="@style/ButtonBarButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/eggplant"
            android:text="@string/suivant"
            android:onClick="suivant"
            android:textAppearance="?android:attr/textAppearanceButton"
            android:textColor="@color/sand"/>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Cocher toutes les classes que vous pensez pouvoir enseigner à des enfants"
        android:id="@+id/textView5"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="@color/white"/>

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Mathématique"
        android:id="@+id/math"
        android:layout_marginTop="50dp"
        android:layout_below="@+id/textView5"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="@color/white"
        android:layout_marginLeft="52dp"
        android:layout_marginStart="52dp"
        android:buttonTint="@color/colorAccent"
        android:checked="false" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Langues"
        android:id="@+id/langues"
        android:layout_below="@+id/math"
        android:layout_alignLeft="@+id/math"
        android:layout_alignStart="@+id/math"
        android:textColor="@color/white"
        android:buttonTint="@color/colorAccent"
        android:checked="false" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sciences"
        android:id="@+id/science"
        android:layout_below="@+id/langues"
        android:layout_alignLeft="@+id/langues"
        android:layout_alignStart="@+id/langues"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/white"
        android:buttonTint="@color/colorAccent"
        android:checked="false" />

</RelativeLayout>
